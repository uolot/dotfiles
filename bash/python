# vim: ft=bash

export PYTHONDONTWRITEBYTECODE=1

alias activate="source $HOME/Bin/activate.sh"
alias a="source $HOME/Bin/activate.sh"

ipython() {
  tmux new bash -c 'source $HOME/Bin/activate.sh '${VIRTUAL_ENV}' && ipython'
}

pyclean() {
  find . -type f -name "*.py[co]" -delete
  find . -type d -name "__pycache__" -delete
  find . -type d -name ".mypy_cache" -delete
}

venv() {
  DIR=${1:-venv}
  python -m venv "$DIR"
  source $HOME/Bin/activate.sh $DIR
}

venv-dev() {
  pip install -U pip
  pip require mypy
  pip require isort
  pip require black
  pip require autoimport
  pip require flake8
  pip require ipython
}

# Pyenv

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init --path)"
  eval "$(pyenv init -)"
fi

# Poetry
export POETRY_VIRTUALENVS_IN_PROJECT=1

# Pip
# export PIP_REQUIRE_VIRTUALENV=true

# Pip extended
source $HOME/.dotfiles/pip-extended.sh
