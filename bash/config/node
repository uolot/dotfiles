# vim: ft=bash

if [[ -f "$HOME/.secrets/LEGO_GH_TOKEN" ]]; then
  export NPM_TOKEN="$(cat "$HOME/.secrets/LEGO_GH_TOKEN")"
  export NODE_AUTH_TOKEN="$(cat "$HOME/.secrets/LEGO_GH_TOKEN")"
  export LEGO_NPM_AUTH_TOKEN="$(cat "$HOME/.secrets/LEGO_GH_TOKEN")"
fi

# pnpm
export PNPM_HOME="/Users/dkTomWal/Library/pnpm"
case ":$PATH:" in
*":$PNPM_HOME:"*) ;;
*) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end
