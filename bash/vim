# vim: ft=bash

alias today="vim -c VimwikiMakeDiaryNote"
alias vimwiki="vim -c VimwikiIndex"

# vim fuzzy find file with fd
vf() {
  local file=$(fd -i -t f | grep -v __pycache__ | fzf --multi -q "$1" --preview='less {}')
  if [ "$file" != "" ]; then
    vim ${@:2} $file
  fi
}

# open random file
vim-random() {
  vim $(fd . -t f | shuf | head -1)
}
