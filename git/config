# vi: filetype=gitconfig

[branch]
	sort = -committerdate
[color]
	ui = auto
[color "diff"]
	meta = white reverse
	frag = cyan reverse
[column]
	ui = auto
[commit]
	verbose = true
[core]
	autocrlf = input
	editor = nvim
	excludesfile = ~/.gitignore
	pager = delta
[credential "https://gitlab.com"]
	helper = !/usr/bin/glab auth git-credential
[delta]
	features = line-numbers decorations
	inspect-raw-lines = false
	navigate = true
	side-by-side = true
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[fetch]
	all = true
	prune = true
	pruneTags = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[help]
	autoCorrect = prompt
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[log]
	decorate = full
[merge]
	tool = vimdiff
	conflictstyle = zdiff3
[mergetool]
	prompt = false
[pull]
	ff = only
	rebase = true
[push]
	autoSetupRemove = true
	default = simple
	followTags = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	autoupdate = true
	enabled = true
[status]
	showUntrackedFiles = all
[tag]
	sort = version:refname
[user]
	useconfigonly = true

[alias]
	# short aliases
	a = add
	ap = add --patch

	b = branch --verbose
	br = branch -ra

	c = commit --verbose
	ca = commit --amend --verbose
	can = commit --amend --no-edit
	cf = commit --fixup
	cm = commit -m

	cb = checkout -b
	co = checkout
	cop = checkout --patch

	df = diff
	dfc = diff --cached

	lgf = log --pretty=format:"%C(green)%h\\ %C(yellow)%ad\\ %C(white)%s\\ %C(blue)%an%n%C(dim)%C(blue)%-d" --decorate --date=human --topo-order --graph -n 10

	p = push
	pn = push --no-verify
	pf = push --force-with-lease
	pfn = push --force-with-lease --no-verify

	st = status --short --branch
	tst = st

	ss = stash
	sp = stash pop

	wt = worktree

	# extra tools
	last = lgf -1
	todos = !"ag -i '(TODO|XXX|FIXME):?' $(git diff --name-only)"
	rebase-since-last-merge = ! git rebase -i $(git log --merges -1 --format="%h")
	modified = ! git show --name-only --pretty=format:
