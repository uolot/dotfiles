# vi: filetype=gitconfig

[color]
	ui = auto
[color "diff"]
	meta = white reverse
	frag = cyan reverse
[commit]
	verbose = true
[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore
[delta]
	features = line-numbers decorations
	inspect-raw-lines = false
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[diff]
	colorMoved = default
[help]
	autocorrect = 0
[log]
	decorate = full
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[push]
	default = simple
	followTags = true
[status]
	showUntrackedFiles = all
[fetch]
	prune = true
[rebase]
	autoSquash = true
[rerere]
	enabled = true
[user]
	useconfigonly = true

[alias]
	# short aliases
	a = add
	ap = add --patch

	b = branch
	br = branch -ra

	c = commit --verbose
	ca = commit --amend --verbose
	cf = commit --fixup
	cm = commit -m

	cb = checkout -b
	co = checkout
	cop = checkout --patch

	df = diff
	dfc = diff --cached

	lgf = log --pretty=format:"%C(green)%h\\ %C(yellow)%ad\\ %C(white)%s\\ %C(blue)%an%n%C(dim)%C(blue)%-d" --decorate --date=human --topo-order --graph -n 10

	p = push

	st = status --short --branch

	# extra tools
	frum = ! git fetch --all && git rebase upstream/master
	from = ! git fetch --all && git rebase origin/master
	prum = pull --rebase upstream master
	prom = pull --rebase origin master
	last = lgf -1
	todos = !"ag '(TODO|XXX|FIXME)' $(git diff --name-only)"
	rebase-since-last-merge = ! git rebase -i $(git log --merges -1 --format="%h")
[pull]
	ff = only
