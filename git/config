# vi: filetype=gitconfig

[color]
	ui = auto
[color "diff"]
	meta = white reverse
	frag = cyan reverse
[commit]
	verbose = true
[core]
	autocrlf = input
	editor = nvim
	excludesfile = ~/.gitignore
	pager = delta
[credential "https://gitlab.com"]
	helper = !/usr/bin/glab auth git-credential
[delta]
	features = line-numbers decorations
	inspect-raw-lines = false
	navigate = true
	side-by-side = true
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[diff]
	colorMoved = default
[fetch]
	prune = true
[help]
	autoCorrect = prompt
[interactive]
	diffFilter = delta --color-only
[log]
	decorate = full
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[pull]
	ff = only
[push]
	default = simple
	followTags = true
[rebase]
	autoSquash = true
[rerere]
	enabled = true
[status]
	showUntrackedFiles = all
[user]
	useconfigonly = true

[alias]
	# short aliases
	a = add
	ap = add --patch

	b = branch --verbose
	br = branch -ra

	c = commit --verbose
	ca = commit --amend --verbose
	can = commit --amend --no-edit
	cf = commit --fixup
	cm = commit -m

	cb = checkout -b
	co = checkout
	cop = checkout --patch

	df = diff
	dfc = diff --cached

	lgf = log --pretty=format:"%C(green)%h\\ %C(yellow)%ad\\ %C(white)%s\\ %C(blue)%an%n%C(dim)%C(blue)%-d" --decorate --date=human --topo-order --graph -n 10

	p = push

	st = status --short --branch

	ss = stash
	sp = stash pop

	# extra tools
	last = lgf -1
	todos = !"ag -i '(TODO|XXX|FIXME):?' $(git diff --name-only)"
	rebase-since-last-merge = ! git rebase -i $(git log --merges -1 --format="%h")
	; mod = !git status --short --branch | fzf --multi --preview='bat {2} --color=always' --header-lines=1 | cut -c 4-
	mod = !git status --short --branch | fzf --multi --preview='git df --color=always {2}' --header-lines=1 | cut -c 4-
