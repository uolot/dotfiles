#!/usr/bin/env sh

case "$1" in
    personal)
        git config user.name "Tomasz Walotek"
        git config user.email "tomasz.walotek@gmail.com"
        ;;
    eh)
        git config user.name "Tomasz Walotek"
        git config user.email "tomasz.walotek@elementhuman.com"
        ;;
    *)
        echo "Usage: $(basename $0) <personal|eh>"
        ;;
esac

