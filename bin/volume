#!/usr/bin/env bash

active_sink=$(pacmd list-sinks |awk '/* index:/{print $3}')

case $1 in
    up)
        pactl set-sink-volume "$active_sink" +2db
        ;;
    down)
        pactl set-sink-volume "$active_sink" -2db
        ;;
    set)
        pactl set-sink-volume "$active_sink" $(echo $2 | tr -d %)%
        ;;
    toggle)
        pactl set-sink-mute "$active_sink" toggle
        ;;
esac
